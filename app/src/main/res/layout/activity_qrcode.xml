<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QRCodeActivity">

    <ImageView
        android:id="@+id/ivQRCode"
        android:layout_width = "200dp"
        android:layout_height = "200dp"
        android:layaout_marginTop = "230sp"
        android:src="mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parnet"
    />

    <EditText
        android:id = "@+id/etData"
        android:layaout_marginTop = "10dp"
        android:layout_width = "match_parent"
        android:layout_height = "550dp"
        android:hint = "Enter Data"
        android:background = "@null"
        android:paddingStart = "15dp"
        app:layout_constraintTop_toBottomOf="@+id/ivQRCode "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parnet"
        android:layaout_marginEnd = "20dp"
        android:layaout_marginStart = "20dp"
    />

    <View
        android:id = "@+id/view1"
        android:layout_width = "match_parent"
        android:layout_height = "1.5dp"
        android:layaout_marginStart = "20dp"
        android:layaout_marginEnd = "20dp"
        android:background = "@color/purple_700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parnet"
        app:layout_constraintTop_toBottomOf = "@+id/etData"

    />

    <Button
        android:id = "@+id/btnGenerateQRCode"
        android:layout_width = "match_parent"
        android:layout_height = "55dp"
        android:text = "Genera QR"
        android:layaout_marginTop = "10dp"
        app:layout_constraintTop_toBottomOf = "@+id/view1"
        android:layaout_marginEnd = "20dp"
        android:layaout_marginStart = "20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parnet"
    />

</androidx.constraintlayout.widget.ConstraintLayout>